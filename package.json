{
  "name": "geochallenge-tooling",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky",
    "lint": "npm --prefix frontend run lint && npm --prefix backend run lint",
    "test": "npm --prefix frontend run test && npm --prefix backend run test",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json,md,yml,yaml,css}\"",
    "format:check": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,json,md,yml,yaml,css}\""
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
